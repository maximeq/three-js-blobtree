{
    "compilerOptions": {
        "module": "es6",
        "target": "ESNext",
        "checkJs": true,
        "moduleResolution": "node",
        "allowJs": true,
        "declaration": true,
        "emitDeclarationOnly":true,
        "declarationMap": true,
        "outDir": "dist/",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/node_modules/*"]
}
